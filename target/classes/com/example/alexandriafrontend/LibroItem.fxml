<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="210.0" prefWidth="170.0"
            styleClass="libro-card"
            stylesheets="@/styles/LibroItem.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="8" alignment="CENTER"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10">
        <ImageView fx:id="imgCategoria" fitHeight="92.0" fitWidth="75.0"/>
        <Label fx:id="lblTitulo" styleClass="libro-titulo"/>
        <Label fx:id="lblAutor" styleClass="libro-autor"/>
        <Label fx:id="lblCategoria" styleClass="libro-categoria"/>
    </VBox>
</AnchorPane>
