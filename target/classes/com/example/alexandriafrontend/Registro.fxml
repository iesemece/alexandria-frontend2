<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane"
            prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.alexandriafrontend.controllers.RegistroController">

   <Label layoutX="220.0" layoutY="65.0" prefHeight="51.0" prefWidth="460.0"
          text="Alexandria" alignment="CENTER">
      <font>
         <Font name="System Bold" size="43.0"/>
      </font>
   </Label>

   <!-- Subtítulo -->
   <Label layoutX="355.0" layoutY="140.0" prefHeight="25.0" prefWidth="184.0"
          text="Crear una cuenta" alignment="CENTER">
      <font>
         <Font name="System Bold" size="14.0"/>
      </font>
   </Label>

   <Label layoutX="338.0" layoutY="165.0" prefHeight="25.0" prefWidth="225.0"
          text="Introduce tus datos para registrarte" alignment="CENTER"/>

   <TextField fx:id="tfPrimer_Nombre"
              layoutX="264.0" layoutY="206.0"
              prefHeight="35.0" prefWidth="365.0"
              promptText="Nombre"/>

   <TextField fx:id="tfApellido"
              layoutX="264.0" layoutY="253.0"
              prefHeight="35.0" prefWidth="365.0"
              promptText="Apellido"/>

   <TextField fx:id="tfEmail"
              layoutX="264.0" layoutY="300.0"
              prefHeight="35.0" prefWidth="365.0"
              promptText="email@ejemplo.com"/>

   <PasswordField  fx:id="tfContraseña"
              layoutX="264.0" layoutY="348.0"
              prefHeight="35.0" prefWidth="365.0"
              promptText="Contraseña"/>

   <ComboBox fx:id="cbRol"
             layoutX="264.0" layoutY="395.0"
             prefHeight="35.0" prefWidth="365.0"
             promptText="Selecciona un rol"/>

   <Button fx:id="btnRegistrarse"
           layoutX="264.0" layoutY="445.0"
           prefHeight="35.0" prefWidth="365.0"
           text="Registrarse"
           style="-fx-background-color: black;"
           textFill="WHITE" defaultButton="true"
           onAction="#handleRegistrarse">
      <font>
         <Font name="System Bold" size="12.0"/>
      </font>
   </Button>

   <Button fx:id="btnVolver"
           layoutX="20.0" layoutY="550.0"
           prefHeight="30.0" prefWidth="130.0"
           text="⟵ Volver"
           onAction="#volverAlInicio"
            />

</AnchorPane>
