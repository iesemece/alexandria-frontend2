<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="panelRaiz" prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.alexandriafrontend.controllers.LoginController">

   <!-- Botón Volver (esquina superior izquierda) -->
   <Button fx:id="btnVolver" text="Atrás" layoutX="20.0" layoutY="20.0" styleClass="boton-volver"
           onAction="#volverAlInicio" />

   <!-- Contenedor principal (centrado) -->
   <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="100.0"
         AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0">


      <!-- Título "Alexandria" -->
      <Label text="Alexandria" styleClass="titulo-app"/>

      <!-- Subtítulo "Inicia sesión" -->
      <Label text="Inicia sesión" styleClass="subtitulo-sesion"/>

      <!-- Texto guía -->
      <Label text="Ingresa tu correo para registrarte en la app" styleClass="texto-guia"/>

      <!-- Campo de email -->
      <TextField fx:id="tfEmail" promptText="ejemplo@email.com" styleClass="campo-texto"/>

      <!-- Campo de contraseña -->
      <PasswordField fx:id="tfContrasena" promptText="Contraseña" styleClass="campo-texto"/>

      <!-- Botón de inicio de sesión -->
      <Button fx:id="btnIniciarSesion" text="Iniciar sesión" styleClass="boton-login"
              defaultButton="true" onAction="#iniciarSesion"/>

      <!-- Enlace para crear cuenta -->
      <HBox alignment="CENTER" spacing="5">
         <Label text="Si no tienes una cuenta, debes registrarte:" styleClass="texto-secundario"/>
         <Hyperlink fx:id="enlaceCrearCuenta" text="Crear cuenta" styleClass="enlace-registro" onAction="#irARegistro"/>
      </HBox>
   </VBox>
</AnchorPane>